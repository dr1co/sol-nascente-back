generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int    @id @default(autoincrement())
  name      String
  email     String
  telephone String

  reservations Reservation[]

  @@map("customers")
}

model Room {
  id     Int        @id @default(autoincrement())
  number Int
  status RoomStatus

  reservation Reservation[]

  @@map("rooms")
}

model Reservation {
  id            Int               @id @default(autoincrement())
  id_customer   Int
  id_room       Int
  date_checkin  DateTime
  date_checkout DateTime
  status        ReservationStatus

  customer Customer @relation(fields: [id_customer], references: id)
  room     Room     @relation(fields: [id_room], references: id)

  @@map("reservations")
}

enum RoomStatus {
  available
  booked
  maintenance
}

enum ReservationStatus {
  active
  cancelled
  checkin
  closed
}
